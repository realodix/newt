    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run tests",
            "type": "shell",
            "command": "php artisan test",
            "problemMatcher": []
        },
        {
            "label": "Run tests (PHPUnit)",
            "type": "shell",
            "command": "./vendor/bin/phpunit",
            "problemMatcher": []
        },
        {
            "label": "PHP CS Fixer",
            "type": "shell",
            "command": "./vendor/bin/php-cs-fixer fix",
            "problemMatcher": []
        },
        {
            "label": "PHP Insights",
            "type": "shell",
            "command": "./vendor/bin/phpinsights",
            "problemMatcher": []
        },
        {
            "label": "PHP Insights (Saving output to file)",
            "type": "shell",
            "command": "./vendor/bin/phpinsights analyse --format=json > PHP_Insights.json --ansi",
            "problemMatcher": []
        },
        {
            "label": "PHPStan",
            "type": "shell",
            "command": "./vendor/bin/phpstan analyse",
            "problemMatcher": []
        }
    ]
